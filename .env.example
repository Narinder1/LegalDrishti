# ===================
# LegalDrishti Environment Variables
# Copy this to .env and fill in your values
# ===================

# ===================
# Application
# ===================
APP_NAME=LegalDrishti
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development  # development, staging, production

# ===================
# Backend Settings
# ===================

# API
API_PREFIX=/api
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Ollama LLM
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:1b
OLLAMA_TIMEOUT=60

# LLM Settings
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,doc,docx

# ===================
# Frontend Settings
# ===================

# API URL (used by Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===================
# Database (uncomment when needed)
# ===================
# DATABASE_URL=postgresql://user:password@localhost:5432/legaldrishti

# ===================
# Redis (uncomment when needed)
# ===================
# REDIS_URL=redis://localhost:6379/0

# ===================
# Security (uncomment when needed)
# ===================
# JWT_SECRET=change-this-in-production-use-long-random-string
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=60
